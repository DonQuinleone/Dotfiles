	path 		= ~/.local/share/vdirsyncer/calendars/Personal/events
	type 		= discover
	color 		= yellow

	[[music_calendar_local]]
	path		= ~/.local/share/vdirsyncer/calendars/Music/events
	type		= discover
	color		= light green

	[[serverpro_calendar_local]]
	path		= ~/.local/share/vdirsyncer/calendars/ServerPro/events
	type		= discover
	color		= light cyan

	[[university_calendar_local]]
	path		= ~/.local/share/vdirsyncer/calendars/University/events
	type		= discover
	color		= light red


[view]
agenda_day_format	= {bold}{name} {date-long}{reset}
